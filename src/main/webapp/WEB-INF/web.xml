<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!--  Servlet Declaration -->
	<!-- -->
	<!-- -->
	<!-- -->
	<servlet>
		<servlet-name>FlightServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.FlightServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>TicketServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.TicketServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CookiesServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.CookiesServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>SessionServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.SessionServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DispatcherServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.DispatcherServlet</servlet-class>
	</servlet>


	<servlet>
		<servlet-name>ContentServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.ContentServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.dandaevit.edu.jdbc.controllers.RegistrationServlet</servlet-class>
	</servlet>

	<!-- JSP Declaration-->
	<!-- -->
	<!-- -->
	<!-- -->

	<servlet>
		<servlet-name>TicketsJSP</servlet-name>
		<jsp-file>/WEB-INF/pages/tickets.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>FlightsJSP</servlet-name>
		<jsp-file>/WEB-INF/pages/flights.jsp</jsp-file>
	</servlet>


	<!--  Servlet Mapping -->
	<!-- -->
	<!-- -->
	<!-- -->
	<servlet-mapping>
		<servlet-name>FlightServlet</servlet-name>
		<url-pattern>/flights</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>TicketServlet</servlet-name>
		<url-pattern>/tickets</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CookiesServlet</servlet-name>
		<url-pattern>/cookies</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SessionServlet</servlet-name>
		<url-pattern>/sessions</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>/dispatcher</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ContentServlet</servlet-name>
		<url-pattern>/content</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>

	<!-- JSP Mapping -->
	<!-- -->
	<!-- -->
	<!-- -->
	<servlet-mapping>
		<servlet-name>TicketsJSP</servlet-name>
		<url-pattern>/tickets-jsp</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FlightsJSP</servlet-name>
		<url-pattern>/flights-jsp</url-pattern>
	</servlet-mapping>


</web-app>
